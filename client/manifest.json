{
  "manifest_version": 2,
  "name": "Get random gif",
  "description": "This extension add an image to your clipboard formatted as a markdown",
  "version": "1.0",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "clipboardWrite",
    "https://api.giphy.com/*",
    "storage"
  ]
}
